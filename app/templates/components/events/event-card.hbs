<div class="ui centered grid margin-no">
  <div class="two wide middle aligned column padding-no text-center" style="max-width: 56px; min-width: 56px;">
    <div class="ui segments border-none box-shadow-none">
      <div class="ui raised segment text-size-big padding-no-left padding-no-right padding-md-top padding-vs-bottom" style="background-image: linear-gradient(#91060b, white);">
        {{moment-format event.date "DD"}}
        <div class="margin-top-ten text-size-fourteen">
          {{moment-format event.date "MMM"}}
        </div>
      </div>
    </div>
  </div>
  <div class="twelve wide left aligned column padding-no-top padding-no-bottom">
    <div class="ui segments border-none box-shadow-none">
      <div class="ui segment text-size-large padding-no-left padding-no-right padding-md-top padding-vs-bottom {{if ellipsis "ellipsis"}}">
        {{event.name}}
      </div>
      <div class="ui segment padding-vs border-none {{if ellipsis "ellipsis"}}">
        {{event.description}}
      </div>
    </div>
  </div>
</div>
{{yield}}